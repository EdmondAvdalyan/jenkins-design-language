{
    "compilerOptions": {
        "outDir": ".",
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "experimentalDecorators": true
    },
    "exclude": [
        "**/node_modules/**/*",
        "**/*.stories.tsx",
        "**/*.tests.tsx",
        "**/*.test.tsx"
    ]
}
